package com.example.androidtransportfinderassessment;

/**
 * Model class for storing data about the transport hubs.
 */
public class TransportInfo
{
    public String name;
    public String type;
    public Double distance;

    /**
     * Constructor to initialise TransportInfo objects.
     *
     * @param name the name of the transport hub.
     * @param type  the type of the transport hub (station, airport or port)
     * @param distance  the distance between the location hub and the user's location.
     */
    public TransportInfo(String name, String type, Double distance)
    {
        this.name = name;
        this.type = type;
        this.distance = distance;
    }

}
